{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "rules": {
    "func-style": "off",
    "func-names": "off",
    "linebreak-style": "off",
    "no-console": "off",
    "no-empty": "off",
    "no-unused-vars": "error",
    "prefer-arrow-callback": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": "warn"
  }
}
